<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:padding="@dimen/screen_padding">

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="@dimen/datePicket_hight"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.homework.nasapicture.utils.EquilateralImageView
        android:id="@+id/marsPictureImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.homework.nasapicture.utils.EquilateralImageView>


    <ImageView
        android:id="@+id/imageViewProgress"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="128dp"
        app:layout_anchor="@+id/marsPictureImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datePicker"
        tools:src="@drawable/ic_progress"
        android:contentDescription="@string/imageViewProgress" />

    <TextView
        android:id="@+id/textViewCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_between_titles"
        android:text="@string/Camera"
        android:textSize="@dimen/text_size_mars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/marsPictureImageView" />

    <TextView
        android:id="@+id/textViewLaunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_between_titles"
        android:text="@string/Launch_date"
        android:textSize="@dimen/text_size_mars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLanding" />

    <TextView
        android:id="@+id/textViewLanding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_between_titles"
        android:text="@string/Landing_date"
        android:textSize="@dimen/text_size_mars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCamera" />


</androidx.constraintlayout.widget.ConstraintLayout>